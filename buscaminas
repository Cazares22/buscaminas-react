      bombas(){
        var i,j,k;
        var myArray = [];
        const bombas = this.state.bombas.slice(); 
        var ale;

        for(i=0;i<100;i++){
          myArray[i]=i;
        }
        console.log(myArray);
    
        for (i = 0; i<10; i++) {
          j = Math.floor(Math.random() * 101);
          k = myArray[i - 1];//crea numeros aleatorios que no se repitan
          myArray[i - 1] = myArray[j];
          myArray[j] = k;
        }

        for( i=0;i < 10;i++){
          bombas[i]=myArray[i];
        }
        console.log(bombas);
        this.setState({bombas: bombas});
        alert("Puedes iniciar, bombas colocadas");
      }

      renderSquare(i) {
        return (
