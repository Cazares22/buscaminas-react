    function CuentaB(squares,bombas,i) {
      var conta=0,a,b,c,d,e,f,g,h,i,k,bandera=0;

      console.log("nn:"+bombas);
      a=i-10;
      b=i-9;
      c=i-8;
      d=i-1;
      e=i;
      f=i+1;
      g=i+8;
      h=i+9;
      i=i+10;

      const lines = [
        [a, b, c],
        [d, e, f],
        [g,h, i],
      ];
      console.log(e);
      for(k=0;k<10;k++){
        if(e==bombas[k]){
          bandera=1;
        }
      }
      if(bandera==1){
        return -1;
      }else{
        for(k=0;k<10;k++){
          if(a==bombas[k]){
            conta++;}
          if(b==bombas[k]){
            conta=conta+1;} 
          if(c==bombas[k]){
            conta=conta+1;
          }if(d==bombas[k]){
            conta=conta+1;
          }if(e==bombas[k]){
            conta=conta+1;
          }if(f==bombas[k]){
            conta=conta+1;
          }if(g==bombas[k]){
            conta=conta+1;
          }if(h==bombas[k]){
            conta=conta+1;
          }if(i==bombas[k]){
            conta=conta+1;
          }
        }
        GN++;
        if(GN>70){
          return 9;}
        return conta;
      } 
    }
